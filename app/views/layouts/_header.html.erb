<header role="banner">
  <nav role="navigation">
    <%= link_to image_tag("rocko_flix_logo.png", width: "60", alt: "Rocko Flix Logo"), root_path, role: "link" %>
    <ul class="left" role="menu">
      <li role="none">
        <%= link_to("All Movies", movies_path, role: "menu item") %>        
      </li>
    </ul>
    <ul class="right" role="menu">
      <% if current_user %>
        <li role="username">
          <%= link_to current_user.name, current_user, role: "current user" %>
        </li>
        <li role="Account Settings">
          <%= link_to "Account Settings", edit_user_path(current_user), role: "account settings" %>
        </li>
        <li role="Sign Out">
          <%= link_to "Sign Out", session_path, data: { turbo_method: :delete }, class: "button", role: "sign out button" %>
        </li>
      <% else %>
        <li role="Sign In">
          <%= link_to "Sign In", signin_path, class: "button", role: "sign in button" %>
        </li>
        <li role="Sign Up">
          <%= link_to "Sign Up", signup_path, class: "button", role: "sign up button" %>
        </li>
      <% end %>
    </ul>
  </nav>
</header>